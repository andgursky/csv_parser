<%= form_for(@product) do |f| %>
  <%= f.hidden_field :supplier_id unless @product.supplier_id.nil? %>
  <%= f.hidden_field :sku unless @product.sku.nil? %>
  <%= f.label :field1 %>
  <%= f.text_field :field1 %>
  <%= f.label :field2 %>
  <%= f.text_field :field2 %>
  <%= f.label :field3 %>
  <%= f.text_field :field3 %>
  <%= f.label :field4 %>
  <%= f.text_field :field4 %>
  <%= f.label :field5 %>
  <%= f.text_field :field5 %>
  <%= f.label :field6 %>
  <%= f.text_field :field6 %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.submit "Save" %>
<% end %>
